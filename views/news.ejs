    <!-- <div id="heading">Top crypto News </div> -->
    <div style="margin-top: 50px; margin-bottom:100px; font-size: xx-large; color:#f88605;">Top Crypto news</div>
    <section id="head"></section>

    <script>

        var h = document.getElementById("head")
        const ApiF = async () => {
            var res = await fetch('https://newsapi.org/v2/everything?q=bitcoin&from=today&language=en&sortBy=publishedAt&apiKey=a40e70ce49b34f59a1ca7648e187cdba')
            var data = await res.json()
            console.log(data.articles.length)

            for (var a = 0; a < data.articles.length; a++) {
                console.log(data.articles[a].urlToImage)
                h.innerHTML += `<div class="container">
                  
                <div class="inner-container">
                    <a target="_blank" href="${data.articles[a].url}"><img src="${data.articles[a].urlToImage}"  href="${data.articles[a].url}"  class="img" title="Source: ${data.articles[a].source.name}" alt="Img"></a>
           
            <a  target="_blank" href="${data.articles[a].url}"><div class="news-title">${data.articles[a].title}</div>
                </div></a></div>`

            }

        }
        ApiF()
    </script>
